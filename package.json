{
  "name": "@sagacify/autoroute",
  "version": "2.0.0",
  "description": "Automatic router for simple REST json api",
  "main": "build/src/Autoroute.js",
  "directories": {
    "lib": "build/src",
    "test": "build/test"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --fix ./src ./test",
    "test:lint": "eslint -f stylish ./src ./test",
    "test:types": "tsc --noEmit --skipLibCheck",
    "test:spec": "env NODE_ENV=test mocha .",
    "test:cover": "nyc npm run test:spec",
    "test:watch": "env NODE_ENV=test mocha --watch",
    "test": "npm run test:lint && npm run test:types && npm run test:cover"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sagacify/autoroute.git"
  },
  "bugs": {
    "url": "https://github.com/Sagacify/autoroute/issues"
  },
  "homepage": "https://github.com/Sagacify/autoroute#readme",
  "keywords": [
    "api",
    "automatic",
    "express",
    "json",
    "rest",
    "router",
    "routing"
  ],
  "author": "@oliviercuyp",
  "contributors": [
    "Fran√ßois Beuvens <francois@sagacify.com>",
    "Emanuel Peroni <emanuel@sagacify.com>",
    "Nicolas Vrielynck <nicolas@sagacify.com>",
    "Quentin Gusbin <quentin@sagacify.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/to-slug-case": "^1.0.0",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "to-slug-case": "^1.0.0"
  },
  "devDependencies": {
    "@sagacify/eslint-config": "^1.2.0",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.1.4",
    "@types/lodash": "^4.14.175",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-semistandard": "^16.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "express": "^4.17.1",
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "express": "4.x"
  },
  "engines": {
    "node": ">=12.4.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "semistandard",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "mocha": {
    "require": "ts-node/register",
    "spec": [
      "test/**/*.ts"
    ],
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "include": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": true,
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
